        <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.6" />
        <PackageReference Include="CSharpMath.Avalonia" Version="0.4.0-alpha" />
        <PackageReference Include="MathNet.Symbolics" Version="0.20.0" />
        <PackageReference Include="ReactiveUI" Version="11.2.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\external\oxyplot-avalonia\Source\OxyPlot.Avalonia\OxyPlot.Avalonia.csproj" />
    </ItemGroup>

</Project>
